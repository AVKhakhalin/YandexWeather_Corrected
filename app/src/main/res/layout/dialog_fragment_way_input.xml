<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_text_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/input_city_info_title_margin"
        android:text="Хотите узнать погоду в новом месте?"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/input_city_info_title_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/way_input_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/input_city_info_button_cancel_margin"
            android:backgroundTint="@color/background_list_color"
            android:text="Нет, в ранее заданном"
            android:textColor="@color/gray_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/way_input_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/input_city_info_button_ok_margin"
            android:backgroundTint="@color/background_list_color"
            android:text="Да"
            android:textColor="@color/gray_text" />
    </LinearLayout>
</LinearLayout>